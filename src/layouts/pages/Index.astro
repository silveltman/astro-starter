---
import Layout from '@layouts/Base.astro'
const { seo } = Astro.props.frontmatter

import Switch from '@components/micro/inputs/Switch.svelte'
import Button from '@components/micro/inputs/Button.svelte'
import TextField from '@components/micro/inputs/TextField.svelte'
import IconButton from '@components/micro/inputs/IconButton.svelte'
import Select from '@components/micro/inputs/Select.svelte'
import TextArea from '@components/micro/inputs/TextArea.svelte'
import Box from '@components/layout/Box.svelte'

